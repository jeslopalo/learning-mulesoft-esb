            </db:insert>
            <logger message="#[payload]" level="INFO" doc:name="Logger"/>
            <db:insert config-ref="Generic_Database_Configuration" doc:name="H2">
                <db:parameterized-query><![CDATA[insert into USUARIOS (ID,SEXO,NOMBRE,APELLIDO1,APELLIDO2,FN) 
