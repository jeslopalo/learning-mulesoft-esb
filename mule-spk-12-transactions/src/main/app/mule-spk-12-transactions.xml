    <jbossts:transaction-manager doc:name="JBoss Transaction Manager"/>
    <flow name="mule-spk-12-transactionsFlow">
        <http:inbound-endpoint exchange-pattern="request-response" host="localhost" port="8081" path="transaction" doc:name="HTTP"/>
        <set-variable variableName="id" value="#[message.inboundProperties.get(&quot;http.query.params&quot;).get(&quot;id&quot;)]" doc:name="Variable"/>
